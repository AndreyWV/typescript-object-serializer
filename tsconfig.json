{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist",
        "sourceMap": true,
        "moduleResolution": "node",
        "module": "CommonJS",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "noImplicitAny": true,
        "target": "es2015",
        "lib": [
            "es2015",
            "es2017",
            "es2018",
            "esnext",
            "dom"
        ]
    },
    "include": [
        "src",
        "playground",
        "tests"
    ],
    "exclude": [
        "node_modules"
    ]
}
