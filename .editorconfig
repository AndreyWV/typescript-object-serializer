# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.html]
indent_size = 4

[*.json]
indent_size = 4

[*.ts]
indent_size = 2
max_line_length = 120

[*.js]
indent_size = 2
max_line_length = 120

[*.scss]
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false
